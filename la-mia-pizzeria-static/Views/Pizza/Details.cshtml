@model Pizza;
@{
    Layout = "_Layout";
    ViewData["Title"] = $"Pizza {Model.Name}";
}

<div class="container">
    <div class="col-12">
        <div class="d-flex align-items-center">
            <h1>Dettaglio pizza:</h1>
        </div>

        <div>
            <img src="@Url.Content(Model.ImgPath)" />
        </div>

        <p>
            <strong>Nome:</strong> @Model.Name
        </p>

        <p>
            <strong>Ingredienti:</strong> @Model.Ingredients
        </p>

        <p>
            <strong>Prezzo:</strong> € @Model.Price.ToString()
        </p>
    </div>
</div>